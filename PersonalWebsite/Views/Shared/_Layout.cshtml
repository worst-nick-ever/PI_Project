<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content(PersonalWebsite.Themes.ThemeContainer.CurrentTheme)" rel="stylesheet">
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Personal Website", "CV", "Guest", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.RouteLink("CV", "Default", new { controller = "Guest", action = "CV" })</li>
                    <li>@Html.RouteLink("Interests", "Default", new { controller = "Guest", action = "Interests" })</li>
                    <li>@Html.RouteLink("Contacts", "Default", new { controller = "Guest", action = "Contacts" })</li>
                    <li>@Html.RouteLink("Places", "Default", new { controller = "Guest", action = "Places" })</li>
                    <li>@Html.RouteLink("Blog", "Default", new { controller = "Guest", action = "Blog" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.RouteLink("Site Settings", "Admin_default", new { controller = "SiteSettings", action = "Edit" })</li>
                        <li>@Html.RouteLink("Admin Inbox", "Admin_default", new { controller = "Messages", action = "Index" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Personal Website</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
